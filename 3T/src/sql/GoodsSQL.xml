   <insert id="insertWishList" parameterClass="wishlist">
   		insert into
   		wishlist(W_NO, W_MEMBER_ID, W_GOODS_NAME, W_GOODS_AMOUNT, W_GOODS_IMG, W_TOTAL, W_GOODS_NO, W_GOODS_SIZE, W_GOODS_COLOR)
