<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>
	<constant name="struts.multipart.maxSize" value="104857600" />
	<package name="joinForm" extends="struts-default">

		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult"></result-type>
		</result-types>

		<action name="AD_main" class="admin.member.ListAction">
			<result name="success" type="tiles">
				AD_main
			</result>
		</action>

		<action name="login" class="user.member.MemberAction">
			<result type="tiles">loginForm</result>
		</action>

		<action name="logon" class="user.member.login.LoginAction"
			method="login">
			<result name="login" type="tiles">
				AD_main
			</result>
			<result name="success">/user/member/LoginSuccess.jsp</result>
			<result name="error">/user/login/LoginError.jsp</result>
		</action>

		<action name="join1" class="user.member.MemberAction">
			<result>/user/member/JoinForm1.jsp</result>
		</action>
		<action name="join2" class="user.member.MemberAction">
			<result>/user/member/JoinForm2.jsp</result>
		</action>
		<action name="join" class="user.member.MemberAction" method="join">
			<result type="redirect-action">
				<param name="actionName">login</param>
			</result>
		</action>


		<action name="findIdForm" class="user.member.MemberFindIdAction">
			<result>
				/user/member/FindId.jsp
			</result>
		</action>
		<action name="findIdAction" class="user.member.MemberFindIdAction"
			method="findId">
			<result>
				/user/member/FindId.jsp
			</result>
		</action>

		<action name="findPwForm" class="user.member.MemberFindPwAction">
			<result>
				/user/member/FindPw.jsp
			</result>
		</action>
		<action name="findPwAction" class="user.member.MemberFindPwAction"
			method="findPw">
			<result>
				/user/member/FindPw.jsp
			</result>
		</action>
		<action name="modifyForm" class="user.member.ModifyAction">
			<result>
				/user/member/Modify.jsp
			</result>
		</action>
		<action name="modifyAction" class="user.member.ModifyAction"
			method="modifyUpadte">
			<result>
				/user/member/ModifySuccess.jsp
			</result>
		</action>

		<action name="deleteAction" class="user.member.MemberDeleteAction"
			method="delete">
			<result>
				/user/member/DeleteSuccess.jsp
			</result>
		</action>





	</package>


</struts>