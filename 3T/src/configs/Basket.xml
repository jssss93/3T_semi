<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- 용량제한 10MB 로 설정. -->
	<constant name="struts.multipart.maxSize" value="10485760" />
	<package name="Basket" extends="struts-default">
	
		<!-- 장바구니 메인. -->
		<action name="BasketMain" class="user.basket.ListAction">
			<result>/user/basket/List.jsp</result>
		</action>
		<!-- 장바구니 상세보기 -->
		<action name="BasketView" class="user.basket.viewAction">
			<result>/user/basket/View.jsp</result>
		</action>
		<!-- 장바구니 삭제하기 -->
		<!-- 장바구니 전체 상품 주문 페이지 이동 -->
	</package>
</struts>